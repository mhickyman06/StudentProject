@model RegisterSpellerViewModel;

@{

    Layout = "_SchoolPortalLayout";

    ViewData["Title"] = "Register Speller";
}

<style>
    label {
        font-size: small;
        font-family: cursive;
        font-style: italic;
    }
</style>

<div class="container-fluid">
    <div>
        <h4>Register Speller</h4>
    </div>
    <div class="mt-5">
        <form id="registerSpeller" asp-action="RegisterSpeller" asp-controller="School" method="post" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.FullName"></label><br />
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.FullName" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Gender"></label>
                    </div>
                    <div class="col-sm-7">
                        <select class="form-select form-select-sm nice-select mb-3" aria-label=".form-select-sm example" asp-items="@Html.GetEnumSelectList<Gender>()">
                            <option selected="selected" disabled>Please Select</option>
                        </select><br />
                        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Age"></label>
                    </div>
                    <div class="col-sm-7">
                        <input id="age" asp-for="@Model.Age" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0"><br />
                        <span asp-validation-for="@Model.Age" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.DateOfBirth"></label>
                    </div>
                    <div class="col-sm-7">
                        <input id="dateofbirth" asp-for="@Model.DateOfBirth" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0"><br />
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.VideoPath" class="form-label"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.VideoPath" class="form-control custom-file-input " />
                        <label class="control-label custom-file-label ">choose File</label><br />
                        <span asp-validation-for="@Model.VideoPath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Address"></label>
                    </div>
                    <div class="col-sm-7">
                        <input id="scoolAddress" asp-for="@Model.Address" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0"><br />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Email"></label>
                    </div>
                    <div class="col-sm-7">
                        <input class="form-control" id="schoolEmail" asp-for="@Model.Email"><br />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Password"></label>
                    </div>
                    <div class="col-sm-7">
                        <input class="form-control" id="schoolPassword" asp-for="@Model.Password"><br />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.ConfirmPassword"></label>
                    </div>
                    <div class="col-sm-7">
                        <input class="form-control" id="confirmPassword" asp-for="@Model.ConfirmPassword"><br />
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CreatedBy"></label>
                    </div>
                    <div class="col-sm-7">
                        <input class="form-control" id="createdBy" asp-for="@Model.CreatedBy"><br />
                        <span asp-validation-for="@Model.CreatedBy" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*<div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.DateCreated"></label>
                    </div>
                    <div class="col-sm-7">
                        <input class="form-control" id="dateCreated" asp-for="@Model.DateCreated"><br />
                        <span asp-validation-for="@Model.DateCreated" class="text-danger"></span>
                    </div>
                </div>
            </div>*@

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" style="border-radius:15px;border:none">Submit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        })
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}