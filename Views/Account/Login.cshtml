@model LoginViewModel;



<div class="container registerdiv">
    <h6 class="register-form-header">Login</h6>

    <div class="mt-3">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.UserName"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="firstName" asp-for="@Model.UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Password"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="lastName" asp-for="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="custom-checkbox">
                    <label asp-for="@Model.IsPersistent">
                        <input asp-for="@Model.IsPersistent" />
                        @Html.DisplayNameFor(x => x.IsPersistent)
                    </label>
                </div>
                <span asp-validation-for="@Model.IsPersistent" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" id="submitBtn" class="registerbtn mb-4">Login</button>
            </div>
        </form>
    </div>
</div>
