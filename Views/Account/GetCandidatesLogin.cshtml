@model GetCandidateLoginModel;


<div class="row mt-5">
    <div class="col-sm-3">

    </div>
    <div class="col-sm-9">
        <div class="container registerdiv" style="margin-bottom:70px">
            <h4 class="register-form-header" style="color:#ffc221">Get Candidates Login</h4>

            <div class="mt-3">
                <form id="registerSchool" asp-action="GetCandidatesLogin" asp-controller="Account" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3 row">
                        <div class="col-sm-3">
                            <label class="form-label" asp-for="@Model.Email"></label>
                        </div>
                        <div class="col-sm-7">
                            <input class="form-control" id="schoolName" asp-for="@Model.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-3">
                            <label class="form-label" asp-for="@Model.Password"></label>
                        </div>
                        <div class="col-sm-7">
                            <input class="form-control" id="schoolPassword" asp-for="@Model.Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-3">
                            <label class="form-label" asp-for="@Model.ConfirmPassword"></label>
                        </div>
                        <div class="col-sm-7">
                            <input class="form-control" id="confirmPassword" asp-for="@Model.ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="submitBtn" class="registerbtn mb-4 btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>