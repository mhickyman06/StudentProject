@model RegisterStudentModel;



<div class="container registerdiv">
    <h6 class="register-form-header">Register as a New Student</h6>

    <div class="mt-3">
        <form asp-action="RegisterStudent" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.FirstName"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="firstName" asp-for="@Model.FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.LastName"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="lastName" asp-for="@Model.LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Gender"></label>
                </div>
                <div class="col-sm-7">
                    <select class="form-select form-select-lg mb-3" id="gender" asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                        <option disabled selected="selected">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>

                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Age"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="age" asp-for="@Model.Age">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.DateOfBirth"></label>
                </div>
                <div class="col-sm-7">
                    <input type="date" class="form-control" id="dateOfBirth" asp-for="@Model.DateOfBirth">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Address"></label>
                </div>
                <div class="col-sm-7">
                    <input  class="form-control" id="address" asp-for="@Model.Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Email"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="email" asp-for="@Model.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Password"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="password" asp-for="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.ConfirmPassword"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="confirmPassword" asp-for="@Model.ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                    <label class="form-label" asp-for="@Model.Class"></label>
                </div>
                <div class="col-sm-7">
                    <input class="form-control" id="class" asp-for="@Model.Class">
                    <span asp-validation-for="Class" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" id="submitBtn" class="registerbtn mb-4">Submit</button>
            </div>
        </form>
    </div>
</div>
